<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/style_3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <ImageView
            android:id="@+id/item_avatar"
            android:background="@drawable/style_2"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/item_name"
            android:layout_margin="10dp"
            android:background="@color/mySmallNull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/item_content"
        android:background="@color/myNull"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/item_image"
        android:layout_margin="10dp"
        android:background="@color/myNull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/item_excite_button"
            android:layout_margin="10dp"
            android:background="@color/myNull"
            android:text="点赞"
            android:textSize="12dp"
            android:textColor="@color/myBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_excite_text"
            android:layout_margin="10dp"
            android:background="@color/myNull"
            android:textSize="12dp"
            android:textColor="@color/myBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/item_naive_button"
            android:layout_margin="10dp"
            android:background="@color/myNull"
            android:text="踩"
            android:textSize="12dp"
            android:textColor="@color/myBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_naive_text"
            android:layout_margin="10dp"
            android:background="@color/myNull"
            android:textSize="12dp"
            android:textColor="@color/myBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/item_favor_button"
            android:layout_margin="10dp"
            android:background="@color/myNull"
            android:text="收藏"
            android:textSize="12dp"
            android:textColor="@color/myBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>